{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "/gemini-chat-pdf/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "py /src/agent/graph.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
